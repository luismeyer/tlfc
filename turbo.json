{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "compile"],
      "inputs": ["src/**/*.ts", "vite.config.js"],
      "outputs": ["build/**"]
    },
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": ["src/**/*.ts", "*.tsbuildinfo", "tsconfig.json"],
      "outputs": ["lib/**"]
    },
    "compile:watch": {
      "inputs": ["src/**/*.ts", "*.tsbuildinfo", "tsconfig.json"],
      "outputs": ["lib/**"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
