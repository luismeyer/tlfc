{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "compile"],
      "inputs": ["src/**/*"],
      "outputs": ["build/**/*"]
    },
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": ["src/**/*", "*.tsbuildinfo"],
      "outputs": ["lib/**/*"]
    },
    "compile:watch": {
      "inputs": ["src/**/*", "*.tsbuildinfo"],
      "outputs": ["lib/**/*"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
