{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*", "vite.config.js", "esbuild.mjs"],
      "outputs": ["dist/**"]
    },
    "build:watch": {
      "inputs": ["src/**/*.ts", "vite.config.js", "esbuild.mjs"],
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": ["src/**/*", "*.tsbuildinfo", "tsconfig.json"],
      "outputs": ["lib/**"]
    },
    "compile:watch": {
      "inputs": ["src/**/*.ts", "*.tsbuildinfo", "tsconfig.json"],
      "outputs": ["lib/**"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
