{
  "name": "root",
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:watch": "turbo build:watch",
    "changeset": "changeset",
    "ci:publish": "npm run compile && npm run build && npx changeset publish",
    "ci:version": "npx changeset version && npm install",
    "compile": "turbo compile",
    "compile:watch": "turbo compile:watch",
    "dev:docs": "npm run -w @tlfc/docs dev",
    "dev:esbuild": "npm run -w @tlfc/esbuild-example dev",
    "dev:vite": "npm run -w @tlfc/vite-example dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "turbo": "^1.10.12"
  }
}
