{
  "name": "@tlfc/example",
  "private": true,
  "scripts": {
    "client": "vite",
    "server:compile": "tsc -p tsconfig.server.json",
    "server:compile:watch": "tsc -p tsconfig.server.json --watch --preserveWatchOutput",
    "client:compile": "tsc -p tsconfig.client.json",
    "client:compile:watch": "tsc -p tsconfig.client.json --watch --preserveWatchOutput",
    "compile": "concurrently 'npm:server:compile' 'npm:client:compile'",
    "compile:watch": "concurrently 'npm:server:compile:watch' 'npm:client:compile:watch'",
    "deploy": "npx cdk deploy --app 'node -r @swc-node/register scripts/build.ts'",
    "dev": "concurrently 'npm:server' 'npm:client'",
    "server": "node -r @swc-node/register scripts/dev.ts",
    "synth": "npx cdk synth --app 'node -r @swc-node/register scripts/build.ts'"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.6",
    "@tlfc/client": "*",
    "@tlfc/server": "*",
    "@tlfc/tools": "*",
    "@tlfc/vite": "*",
    "@types/node": "^20.4.1",
    "cdk": "^2.87.0",
    "concurrently": "^8.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.0",
    "zod": "^3.21.4"
  }
}
